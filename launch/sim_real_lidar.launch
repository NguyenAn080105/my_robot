<launch>
  <arg name="use_sim_time" default="true"/>
  <arg name="model" default="$(find my_robot)/urdf/sim_real_lidar.urdf"/>
  <arg name="rviz_config" default="$(find my_robot)/config/config.rviz"/>
  <arg name="world_file" default="$(find my_robot)/worlds/room2.world"/>

  <param name="/use_sim_time" value="$(arg use_sim_time)"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_file)"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- === 2. LOAD URDF === -->
  <param name="robot_description"
         command="$(find xacro)/xacro --inorder $(arg model)" />

  <!-- === 3. ROBOT STATE PUBLISHER === -->
  <node name="robot_state_publisher"
        pkg="robot_state_publisher"
        type="robot_state_publisher"/>

  <!-- === 4. SPAWN ROBOT VÀO GAZEBO === -->
  <node name="spawn_urdf"
        pkg="gazebo_ros"
        type="spawn_model"
        args="-param robot_description -urdf -model my_robot_model -x 0 -y 0 -z 0.1"/>

  <!-- === 5. KHỞI ĐỘNG RPLIDAR S2E THẬT (qua Ethernet UDP) === -->
  <include file="$(find my_robot)/launch/rplidars2e.launch">
    <arg name="channel_type" value="udp"/>
    <arg name="udp_ip" value="192.168.11.2"/>
    <arg name="udp_port" value="8089"/>
    <arg name="frame_id" value="laser_frame"/>
    <arg name="inverted" value="false"/>
    <arg name="angle_compensate" value="true"/>
    <arg name="scan_mode" value="Sensitivity"/>
  </include>

  <!-- === 6. SLAM === -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="base_footprint"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    <param name="map_update_interval" value="5.0"/>
  </node>

  <node name="rviz"
        pkg="rviz"
        type="rviz"
        args="-d $(arg rviz_config)"/>
</launch>